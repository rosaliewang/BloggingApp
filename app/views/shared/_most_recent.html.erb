<h4>most recent blogs</h4>
<table class="table table-hover" style="table-layout: fixed">
  <% if @recent_items.any? %>
      <tbody>
        <% @recent_items.each do |article| %>
          <tr>
            <td><%= link_to article.title, article %></td>
          </tr>
        <% end %>
  <% end %>
      </tbody>
</table>